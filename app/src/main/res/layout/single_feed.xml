<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/feed_profile_img"
            android:src="@drawable/ic_profile"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/feed_profile_username"
            android:text="username"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@id/feed_profile_img"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"
            android:gravity="center" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:id="@+id/feed_Image"
            android:src="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/feed_profile_img" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/feed_Like"
            android:src="@drawable/ic_like_black"
            app:layout_constraintLeft_toLeftOf="@id/feed_Image"
            app:layout_constraintTop_toBottomOf="@id/feed_Image" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/feed_Comment"
            android:src="@drawable/ic_comment"
            app:layout_constraintLeft_toRightOf="@id/feed_Like"
            app:layout_constraintTop_toBottomOf="@id/feed_Image" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/feed_Share"
            android:src="@drawable/ic_share"
            app:layout_constraintLeft_toRightOf="@id/feed_Comment"
            app:layout_constraintTop_toBottomOf="@id/feed_Image" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/feed_description"
            android:text="Image is beautiful"
            android:textSize="24dp"
            app:layout_constraintTop_toBottomOf="@id/feed_Like"
            app:layout_constraintLeft_toLeftOf="@id/feed_Like" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>